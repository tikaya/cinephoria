<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Films - Cinéphoria</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <link href="/css/styles.css" rel="stylesheet" />
  <style>
    :root{ --gold:#f5c518; --bg-2:rgba(12,18,38,.72); --stroke:rgba(255,255,255,.08); --radius:18px; }
    body{ background:#0b1121; color:#e6ebff; }
    .pane{ background:linear-gradient(180deg,rgba(255,255,255,.02),rgba(255,255,255,.01)),var(--bg-2);
           border:1px solid var(--stroke); border-radius:var(--radius); backdrop-filter:blur(10px); }
    .btn-gold{ border:1px solid rgba(245,197,24,.6); border-radius:999px; padding:.45rem .9rem;
               text-decoration:none; color:#fff; background:linear-gradient(180deg,rgba(245,197,24,.16),rgba(245,197,24,.06)); }
    .table-dark thead th{ border-color:rgba(255,255,255,.2); }
    .badge-gold{ background:linear-gradient(180deg,#f5c518,#f2d46a); color:#0a0f1e; }
    .muted{ color:#9aa4c7; }
  </style>
</head>
<body>
  <div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h1 class="h3"><i class="fa-solid fa-film me-2 text-warning"></i> Films</h1>
      <div class="d-flex gap-2">
        <a href="/admin" class="btn btn-outline-light">← Admin</a>
        <a href="/admin/films/new" class="btn-gold"><i class="fa-solid fa-plus"></i> Nouveau film</a>
      </div>
    </div>

    <% if (msg) { %><div class="alert alert-success"><%= msg %></div><% } %>
    <% if (err) { %><div class="alert alert-danger"><%= err %></div><% } %>

    <form method="get" class="pane p-3 mb-3">
      <div class="row g-2 align-items-center">
        <div class="col-sm-6 col-lg-4">
          <input class="form-control" name="q" value="<%= q %>" placeholder="Rechercher par titre…" />
        </div>
        <div class="col-auto">
          <button class="btn btn-light">Rechercher</button>
        </div>
        <div class="col-auto muted">Total : <span class="badge badge-gold"><%= total %></span></div>
      </div>
    </form>

    <div class="table-responsive pane p-2">
      <table class="table table-dark align-middle mb-0">
        <thead>
          <tr>
            <th>#</th><th>Titre</th><th>Genre</th><th>Âge min.</th><th>Cœur</th><th>Ajout</th><th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
        <% if (!films || films.length === 0) { %>
          <tr><td colspan="7" class="text-center muted py-4">Aucun film</td></tr>
        <% } else { films.forEach(f => { %>
          <tr>
            <td><%= f.id_film %></td>
            <td><strong><%= f.titre %></strong></td>
            <td><%= f.genre %></td>
            <td><%= f.age_minimum == null ? '—' : f.age_minimum %></td>
            <td><%= f.label_coup_de_coeur ? '⭐' : '—' %></td>
            <td><%= new Date(f.date_ajout).toLocaleString('fr-FR') %></td>
            <td class="text-end">
              <a href="/admin/films/<%= f.id_film %>/edit" class="btn btn-sm btn-outline-warning">
                <i class="fa-solid fa-pen"></i>
              </a>
              <form action="/admin/films/<%= f.id_film %>/delete" method="post" class="d-inline"
                    onsubmit="return confirm('Supprimer ce film ?');">
                <button class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
              </form>
            </td>
          </tr>
        <% }) } %>
        </tbody>
      </table>
    </div>

    <!-- Pagination simple -->
    <% if (total > pageSize) { 
         const pages = Math.ceil(total / pageSize);
    %>
      <nav class="mt-3">
        <ul class="pagination pagination-sm">
          <% for (let i=1;i<=pages;i++){ %>
            <li class="page-item <%= i===page ? 'active':'' %>">
              <a class="page-link" href="?page=<%= i %>&q=<%= encodeURIComponent(q) %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>
  <script>
    // Effet de fondu du body
    window.addEventListener("load", () => {
      document.body.classList.add("loaded");
    });
  </script>
</body>
</html>

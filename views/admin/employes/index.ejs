<!doctype html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <% 
    const _title   = (typeof title !== 'undefined' && title) ? title : 'Employés';
    const _page    = Number(typeof page !== 'undefined' ? page : 1);
    const _pages   = Number(typeof pages !== 'undefined' ? pages : 1);
    const _q       = (typeof q !== 'undefined' && q) ? String(q) : '';
    const _role    = (typeof role !== 'undefined' && role) ? String(role) : '';
    const _created = (typeof created !== 'undefined') ? created : false;
    function qs(p){
      let s = 'page=' + encodeURIComponent(p);
      if (_q) s += '&q=' + encodeURIComponent(_q);
      if (_role) s += '&role=' + encodeURIComponent(_role);
      return s;
    }
  %>
  <title><%= _title %> - Cinéphoria</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Fonts & UI -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Cinzel:wght@600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    /* Sticky footer */
    html, body { height: 100%; }
    body { display: flex; flex-direction: column; min-height: 100vh; }
    main { flex: 1 0 auto; }
    footer { margin-top: auto; }

    :root{
      --gold:#f5c518; --gold2:#ffc83d;
      --glass: rgba(255,255,255,.08);
      --stroke: rgba(255,255,255,.16);
      --bg1:#0a0f1f; --bg2:#131a2e;
    }
    body{
      min-height:100vh; margin:0; color:#eef0f4;
      font-family:'Poppins',system-ui,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
      background:
        radial-gradient(1200px 600px at 10% 10%, #1a2141 0%, transparent 60%),
        radial-gradient(1200px 600px at 90% 20%, #142042 0%, transparent 65%),
        radial-gradient(1400px 800px at 50% 105%, #0d1531 0%, transparent 60%),
        linear-gradient(145deg, var(--bg1), var(--bg2));
      overflow-x:hidden;
    }
    .wrap{ padding: 2.2rem 1rem; }
    .card-glass{
      background: linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,.04));
      border:1px solid var(--stroke);
      border-radius:20px; backdrop-filter: blur(14px) saturate(135%);
      box-shadow: 0 25px 60px rgba(0,0,0,.55), 0 0 24px rgba(245,197,24,.10);
    }
    .brand{
      font-family:'Cinzel',serif; color:var(--gold);
      text-shadow:0 0 18px rgba(245,197,24,.25),0 2px 12px rgba(0,0,0,.65);
    }
    .btn-cine{
      --g1:#ff4d88; --g2:#7a4dff;
      background: linear-gradient(45deg, var(--g1), var(--g2));
      color:#fff; font-weight:700; border:none; border-radius:12px;
      padding:10px 14px; box-shadow: 0 10px 24px rgba(0,0,0,.35);
    }
    .btn-ghost{
      background: rgba(255,255,255,.07); color:#fff;
      border:1px solid var(--stroke); border-radius:12px; padding:10px 14px;
    }
    .toolbar{ gap:.75rem; }
    .form-control.pill,
    .form-select.pill {
      background: rgba(255,255,255,.06) !important;
      color: #eaf0ff !important;
      border: 1px solid rgba(255,255,255,.22);
      border-radius: 12px;
    }
    .form-control.pill::placeholder { color: #b8c0d9; opacity: .95; }
    .form-control.pill:focus,
    .form-select.pill:focus {
      background: rgba(0,0,0,.25) !important;
      color: #ffffff !important;
      border-color: rgba(245,197,24,.55);
      box-shadow: 0 0 0 .2rem rgba(245,197,24,.25);
    }
    input.form-control.pill:-webkit-autofill {
      -webkit-text-fill-color: #eaf0ff;
      transition: background-color 9999s ease-out, color 9999s ease-out;
    }
    .table-dark{
      --bs-table-bg: transparent;
      --bs-table-striped-bg: rgba(255,255,255,.06);
      --bs-table-hover-bg: rgba(255,255,255,.08);
      color:#f3f3f3; border-color: transparent;
    }
    thead th{
      color:#cfd6e1; font-weight:600; letter-spacing:.2px;
      border-bottom:1px solid rgba(255,255,255,.18) !important;
    }
    .divider{
      height:2px; background: linear-gradient(90deg, transparent, var(--gold), transparent);
      opacity:.85; margin:.6rem 0 1.2rem;
    }
    .badge-role{ background: rgba(245,197,24,.18); border:1px solid rgba(245,197,24,.32); }
    .status-toast{
      border-left:3px solid var(--gold); background: rgba(255,255,255,.06);
      border:1px solid var(--stroke); color:#eaf0ff;
    }
    .pagination .page-link{
      background: rgba(255,255,255,.07); border:1px solid var(--stroke); color:#fff;
    }
    .pagination .page-item.active .page-link{
      background: linear-gradient(45deg, #ff4d88, #7a4dff); border-color: transparent;
    }
  </style>
</head>
<body>
  <%- include('../../partials/header') %>

  <main class="container wrap">
    <% if (_created) { %>
      <div class="alert status-toast d-flex align-items-center" role="alert">
        <i class="fa-solid fa-circle-check me-2" style="color:var(--gold)"></i>
        Employé créé avec succès.
      </div>
    <% } %>

    <!-- Toolbar -->
    <div class="d-flex justify-content-between align-items-center mb-3 toolbar flex-wrap">
      <h1 class="h3 brand m-0">
        <i class="fa-solid fa-users-gear me-2"></i><%= _title %>
      </h1>

      <!-- Actions regroupées à droite -->
      <div class="d-flex gap-2">
        <a href="/admin/employes/new" class="btn btn-cine">
          <i class="fa-solid fa-user-plus me-1"></i> Nouvel employé
        </a>

        <a href="/admin/resetpwd/employe/form" class="btn btn-ghost"
           data-bs-toggle="tooltip" title="Réinitialiser un mot de passe employé">
          <i class="fa-solid fa-key me-1"></i> Réinitialiser mot de passe
        </a>
      </div>
    </div>

    <!-- Filtres -->
    <form class="card-glass p-3 p-md-4 mb-4" method="GET" action="/admin/employes">
      <div class="row g-2 align-items-end">
        <div class="col-md-6">
          <label class="form-label text-light-50">Recherche</label>
          <input type="text" class="form-control pill text-light" name="q" placeholder="email@domaine.com" value="<%= _q %>">
        </div>
        <div class="col-md-3">
          <label class="form-label text-light-50">Rôle</label>
          <select name="role" class="form-select pill text-light">
            <option value="" <%= _role==='' ? 'selected':'' %> >Tous</option>
            <option value="EMPLOYEE" <%= _role==='EMPLOYEE' ? 'selected':'' %> >Employé</option>
            <option value="ADMIN" <%= _role==='ADMIN' ? 'selected':'' %> >Administrateur</option>
          </select>
        </div>
        <div class="col-md-3 d-flex gap-2">
          <button class="btn btn-cine flex-grow-1" type="submit">
            <i class="fa-solid fa-magnifying-glass me-1"></i> Filtrer
          </button>
          <% if (_q || _role) { %>
            <a href="/admin/employes" class="btn btn-ghost">
              <i class="fa-solid fa-rotate-left me-1"></i> Reset
            </a>
          <% } %>
        </div>
      </div>
    </form>

    <!-- Liste -->
    <section class="card-glass p-0">
      <div class="p-3 p-md-4 pb-2">
        <div class="d-flex justify-content-between align-items-center">
          <div class="fw-semibold text-light">Résultats</div>
          <div class="text-light-50 small">Page <%= _page %> / <%= _pages %></div>
        </div>
        <div class="divider"></div>
      </div>

      <div class="table-responsive">
        <table class="table table-dark table-striped align-middle mb-0">
          <thead>
            <tr>
              <th style="width:90px">#</th>
              <th>Email</th>
              <th style="width:160px">Rôle</th>
              <th style="width:220px">Créé le</th>
            </tr>
          </thead>
          <tbody>
            <% if (items && items.length) { %>
              <% items.forEach(u => { %>
                <tr>
                  <td class="fw-semibold"><%= u.id_employe %></td>
                  <td><i class="fa-regular fa-envelope me-1"></i><%= u.email_employe %></td>
                  <td>
                    <span class="badge rounded-pill badge-role">
                      <i class="fa-solid fa-user-shield me-1"></i><%= u.role_employe %>
                    </span>
                  </td>
                  <td>
                    <% if (u.created_at) { %>
                      <%= new Date(u.created_at).toLocaleString('fr-FR') %>
                    <% } else { %>
                      —
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center text-muted py-4">
                  <i class="fa-regular fa-circle-question me-1"></i> Aucun employé trouvé.
                  <a href="/admin/employes/new" class="ms-1 link-light text-decoration-underline">Créer le premier</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (_pages > 1) { %>
        <nav class="p-3">
          <ul class="pagination justify-content-center mb-0">
            <li class="page-item <%= _page<=1 ? 'disabled':'' %>">
              <a class="page-link" href="/admin/employes?<%= qs(1) %>" aria-label="Première">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item <%= _page<=1 ? 'disabled':'' %>">
              <a class="page-link" href="/admin/employes?<%= qs(Math.max(1,_page-1)) %>" aria-label="Précédente">
                <span aria-hidden="true">&lsaquo;</span>
              </a>
            </li>

            <% 
              const start = Math.max(1, _page - 2);
              const end   = Math.min(_pages, start + 4);
              for (let p = start; p <= end; p++) { 
            %>
              <li class="page-item <%= p===_page ? 'active':'' %>">
                <a class="page-link" href="/admin/employes?<%= qs(p) %>"><%= p %></a>
              </li>
            <% } %>

            <li class="page-item <%= _page>=_pages ? 'disabled':'' %>">
              <a class="page-link" href="/admin/employes?<%= qs(Math.min(_pages,_page+1)) %>" aria-label="Suivante">
                <span aria-hidden="true">&rsaquo;</span>
              </a>
            </li>
            <li class="page-item <%= _page>=_pages ? 'disabled':'' %>">
              <a class="page-link" href="/admin/employes?<%= qs(_pages) %>" aria-label="Dernière">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      <% } %>
    </section>
  </main>

  <%- include('../../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Activer les tooltips Bootstrap
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
      new bootstrap.Tooltip(el);
    });
  </script>
</body>
</html>

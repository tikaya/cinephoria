<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title><%= typeof title !== 'undefined' ? title : 'Dashboard â€” RÃ©servations (7 jours)' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="mb-4">ğŸ“Š RÃ©servations par film â€” 7 jours</h1>
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center gap-2 mb-2">
          <span class="badge text-bg-secondary">Source: MongoDB</span>
          <span class="badge text-bg-secondary">Fuseau: Europe/Paris</span>
          <span class="badge text-bg-secondary">
            FenÃªtre: <%= new Date(data.start).toISOString().slice(0,10) %> â†’ <%= new Date(data.end).toISOString().slice(0,10) %>
          </span>
        </div>
        <canvas id="chart" height="140"></canvas>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
  <script>
    const payload = <%- JSON.stringify(data) %>; // ğŸ” on lit "data" au lieu de "payload"
    const datasets = payload.series.map(s => ({
      label: s.label,   // ğŸ” label rÃ©el
      data: s.data
      // (Chart.js choisira les couleurs par dÃ©faut)
    }));

    new Chart(document.getElementById('chart'), {
      type: 'bar',
      data: { labels: payload.labels, datasets },
      options: {
        responsive: true,
        scales: { x: { stacked: true }, y: { stacked: true, beginAtZero: true } },
        plugins: { legend: { position: 'bottom' } }
      }
    });
  </script>
</body>
</html>

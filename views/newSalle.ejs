<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title><%= (typeof title!=='undefined'&&title)||'Nouvelle salle' %> - Cinéphoria</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <link href="/css/styles.css" rel="stylesheet" />
  <style>
    :root { --gold:#f5c518; --bg-2:rgba(12,18,38,.72); --stroke:rgba(245,197,24,.18); --text:#eaeaea; --blur:12px; --radius:18px; }
    body { background: radial-gradient(1100px 680px at 20% -10%, #121a35 0%, #0a0f1f 45%, #05070f 100%); color:var(--text); }
    .admin-main{ padding-top:96px; padding-bottom:80px; }
    .glass{ background: var(--bg-2); border:1px solid var(--stroke); border-radius: var(--radius); backdrop-filter: blur(var(--blur)); }
    .btn-gold{ background: linear-gradient(180deg,#f5c518,#d1a60a); color:#111; border:none; }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <main class="container admin-main">
    <div class="glass p-3 d-flex justify-content-between align-items-center mb-3">
      <h1 class="h5 m-0"><i class="fa-solid fa-chair me-2" style="color:var(--gold)"></i> Nouvelle salle</h1>
      <div class="d-flex gap-2">
        <a class="btn btn-outline-light btn-sm" href="/admin/salles"><i class="fa-solid fa-table me-1"></i> Liste</a>
      </div>
    </div>

    <div aria-live="polite" aria-atomic="true" class="mb-3">
      <% if (messages?.error) { %>
        <div class="alert alert-danger glass alert-dismissible fade show"><%= messages.error %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
      <% } %>
      <% if (messages?.success) { %>
        <div class="alert alert-success glass alert-dismissible fade show"><%= messages.success %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
      <% } %>
    </div>

    <% const fd = (typeof formData!=='undefined' && formData) ? formData : {}; %>

    <section class="glass p-3 p-md-4">
      <form method="POST" action="/admin/salles" novalidate>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label" for="nom_salle">Nom *</label>
            <input id="nom_salle" name="nom_salle" class="form-control" required value="<%= fd.nom_salle || '' %>"/>
          </div>
          <div class="col-md-3">
            <label class="form-label" for="capacite">Capacité *</label>
            <input id="capacite" name="capacite" type="number" min="1" step="1" class="form-control" required value="<%= fd.capacite || '' %>"/>
          </div>
          <div class="col-md-3">
            <label class="form-label" for="qualite_projection">Qualité (optionnel)</label>
            <input id="qualite_projection" name="qualite_projection" class="form-control" placeholder="IMAX, 3D…" value="<%= fd.qualite_projection || '' %>"/>
          </div>
        </div>

        <div class="mt-4 d-flex gap-2">
          <button class="btn btn-gold" type="submit"><i class="fa-solid fa-floppy-disk me-1"></i> Créer</button>
          <a class="btn btn-outline-light" href="/admin/salles">Annuler</a>
        </div>
      </form>
    </section>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>window.addEventListener('load',()=>document.body.classList.add('loaded'));</script>
</body>
</html>

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>S√©ances - <%= filmTitre %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    /* Apparition anim√©e du tableau */
    .seance-table {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease, transform 0.6s ease;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(245,197,24,0.2);
      border-radius: 12px;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 20px rgba(0,0,0,0.6);
    }
    .seance-table.visible {
      opacity: 1;
      transform: translateY(0);
    }
    /* Titres des colonnes dor√©s */
    .table-dark th {
      color: #f5c518;
      font-family: 'Cinzel', serif;
      letter-spacing: 1px;
      font-size: 1.1rem;
      text-shadow: 0 0 6px rgba(245,197,24,0.5);
    }
    /* Contenu du tableau */
    .table-dark td {
      vertical-align: middle;
      color: #e4e4e4;
    }
    /* Prix dor√© lumineux */
    .price-tag {
      font-weight: bold;
      color: #ffcc33;
      text-shadow: 0 0 4px rgba(255,204,51,0.4);
    }
    /* Message quand aucune s√©ance */
    .no-session {
      color: #aaa;
      font-size: 1.2rem;
      margin-top: 50px;
      font-style: italic;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-5 mb-5">
    <h1 class="text-center mb-4 text-cinema">üé¨ S√©ances pour "<%= filmTitre %>"</h1>

    <% if (seances && seances.length > 0 && !seances[0].message) { %>
      <!-- Tableau des s√©ances -->
      <div class="table-responsive seance-table shadow rounded">
        <table class="table table-dark table-striped align-middle text-center">
          <thead>
            <tr>
              <th scope="col">Jour</th>
              <th scope="col">Heure d√©but</th>
              <th scope="col">Heure fin</th>
              <th scope="col">Qualit√©</th>
              <th scope="col">Prix (‚Ç¨)</th>
            </tr>
          </thead>
          <tbody>
            <% seances.forEach(seance => { %>
              <tr>
                <td>
                  <%= new Date(seance.date_projection).toLocaleDateString('fr-FR', { weekday: 'long', day: 'numeric', month: 'long' }) %>
                </td>
                <td><%= seance.heure_debut.slice(0,5) %></td>
                <td><%= seance.heure_fin.slice(0,5) %></td>
                <td><%= seance.qualite_projection %></td>
                <td class="price-tag"><%= parseFloat(seance.prix).toFixed(2) %> ‚Ç¨</td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <!-- Message si aucune s√©ance -->
      <p class="text-center no-session">
        <%= seances && seances[0] && seances[0].message ? seances[0].message : "Aucune s√©ance disponible pour ce film." %>
      </p>
    <% } %>

    <div class="text-center mt-4">
      <a href="/films" class="btn btn-cinema">‚¨Ö Retour aux films</a>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelector(".seance-table")?.classList.add("visible");
    });
  </script>
  <script>
    // Effet de fondu au chargement
    window.addEventListener("load", () => {
      document.body.classList.add("loaded");
    });
  </script>
</body>
</html>

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Cr√©er un compte - Cin√©phoria</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&family=Cinzel:wght@600&display=swap" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background: radial-gradient(circle at 30% 20%, #1a1f36, #0a0f1f, #050812);
      background-size: 200% 200%;
      animation: backgroundShift 25s ease infinite;
      font-family: 'Poppins', sans-serif;
      color: #eaeaea;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      opacity: 0;
      transition: opacity 1.2s ease-in-out;
    }
    body.loaded { opacity: 1; }
    @keyframes backgroundShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .cinema-card {
      background: rgba(255,255,255,0.07);
      border: 1.2px solid rgba(245,197,24,0.33);
      border-radius: 19px;
      backdrop-filter: blur(15px);
      box-shadow: 0 0 40px rgba(0,0,0,0.8);
      transition: transform 0.4s, box-shadow 0.4s;
    }
    .cinema-card:hover { transform: translateY(-5px) scale(1.016); box-shadow: 0 0 50px rgba(245,197,24,0.24);}
    .fade-in { opacity: 0; transform: translateY(25px); animation: fadeInUp 1s ease forwards; }
    @keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }
    h1 {
      font-family: 'Cinzel', serif; color: #f5c518;
      text-shadow: 0 0 18px rgba(245,197,24,0.5), 0 0 30px rgba(0,0,0,0.8);
      font-size: 2.2rem; margin-bottom: 1.3em;
    }
    .cinema-label {
      color: #f5c518; font-weight: 500; text-shadow: 0 0 6px rgba(0,0,0,0.8);
    }
    .form-control, .form-select {
      background: rgba(255,255,255,0.10);
      border: 1px solid rgba(255,255,255,0.18);
      color: #fff; border-radius: 8px;
      transition: border 0.3s, box-shadow 0.3s;
    }
    .form-control:focus, .form-select:focus {
      background: rgba(0,0,0,0.33);
      border-color: #f5c518;
      box-shadow: 0 0 12px rgba(245,197,24,0.48);
      outline: none;
      color: #fff;
    }
    .input-group-text {
      background: rgba(245,197,24,0.12);
      border: 1px solid rgba(245,197,24,0.20);
      color: #f5c518;
    }
    .form-text, .invalid-feedback, .valid-feedback { font-size: 0.99em; }
    .invalid-feedback { color: #ff4257; }
    .valid-feedback   { color: #32d677; }
    .btn-cinema {
      background: linear-gradient(45deg, #ff004d, #a700ff);
      color: #fff;
      font-weight: bold;
      border-radius: 8px;
      padding: 13px;
      border: none;
      text-shadow: 0 0 6px rgba(0,0,0,0.8);
      transition: transform 0.4s, box-shadow 0.4s;
      position: relative;
      overflow: hidden;
      margin-top: 15px;
    }
    .btn-cinema:active { transform: scale(0.96); }
    .btn-cinema:hover { transform: scale(1.05); box-shadow: 0 0 24px rgba(245,197,24,0.55);}
    .form-check-label { color: #d6d6d6; }
    .form-check-input:checked { background-color: #f5c518; border-color: #f5c518;}
    @media (max-width: 540px) {
      .cinema-card { padding: 1.2rem 0.6rem 1.5rem 0.6rem;}
      h1 { font-size: 1.2rem;}
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-5 mb-5 fade-in">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card cinema-card shadow p-5">
          <h1 class="text-center">üé¨ Cr√©ez votre compte</h1>

          <% if (errorMessage) { %>
            <div class="alert alert-danger text-center" role="alert">
              <%= errorMessage %>
            </div>
          <% } %>

          <form action="/register" method="POST" autocomplete="on" novalidate id="registerForm">
            <div class="mb-3">
              <label for="prenom" class="form-label cinema-label">Pr√©nom</label>
              <input type="text" class="form-control" id="prenom" name="prenom" required autocomplete="given-name"
                value="<%= previousValues?.prenom || '' %>">
              <div class="invalid-feedback">Veuillez saisir votre pr√©nom.</div>
            </div>
            <div class="mb-3">
              <label for="nom" class="form-label cinema-label">Nom</label>
              <input type="text" class="form-control" id="nom" name="nom" required autocomplete="family-name"
                value="<%= previousValues?.nom || '' %>">
              <div class="invalid-feedback">Veuillez saisir votre nom.</div>
            </div>
            <div class="mb-3">
              <label for="pseudo" class="form-label cinema-label">Nom d'utilisateur</label>
              <input type="text" class="form-control" id="pseudo" name="pseudo" required autocomplete="username"
                value="<%= previousValues?.pseudo || '' %>">
              <div class="invalid-feedback">Veuillez choisir un nom d'utilisateur.</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label cinema-label">Adresse e-mail</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                <input type="email" class="form-control" id="email" name="email" required autocomplete="email"
                  value="<%= previousValues?.email || '' %>">
              </div>
              <div class="invalid-feedback">Veuillez saisir une adresse e-mail valide.</div>
            </div>
            <div class="mb-3">
              <label for="mot_de_passe" class="form-label cinema-label">Mot de passe</label>
              <div class="input-group">
                <input type="password" class="form-control" id="mot_de_passe" name="password"
                  required minlength="8" autocomplete="new-password">
                <span class="input-group-text" id="toggleMdp" style="cursor:pointer;">
                  <i class="fa fa-eye" id="iconEye"></i>
                </span>
              </div>
              <div class="form-text" id="mdp-strength"></div>
              <div class="invalid-feedback">Veuillez saisir un mot de passe conforme.</div>
            </div>
            <div class="mb-3">
              <label for="confirmer_mdp" class="form-label cinema-label">Confirmez le mot de passe</label>
              <input type="password" class="form-control" id="confirmer_mdp" name="confirm_password"
                required minlength="8" autocomplete="new-password">
              <div class="invalid-feedback">Les mots de passe ne correspondent pas.</div>
              <div class="valid-feedback">Mot de passe confirm√© !</div>
            </div>
            <div class="form-check mb-3 mt-2">
              <input class="form-check-input" type="checkbox" value="" id="cgu" required>
              <label class="form-check-label" for="cgu">
                J‚Äôaccepte les <a href="/cgu" target="_blank" style="color:#f5c518;">conditions g√©n√©rales d‚Äôutilisation</a>
              </label>
              <div class="invalid-feedback">Vous devez accepter les CGU.</div>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-cinema btn-lg">Cr√©er mon compte</button>
            </div>
            <div class="text-center mt-4">
              <span class="text-light">D√©j√† un compte ?</span>
              <a href="/login" style="color:#f5c518; text-decoration:underline; text-underline-offset:3px;">Connectez-vous</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.addEventListener("load", () => { document.body.classList.add("loaded"); });

    // Afficher/masquer mdp
    const inputMdp = document.getElementById('mot_de_passe');
    const inputConfirm = document.getElementById('confirmer_mdp');
    const eye = document.getElementById('iconEye');
    document.getElementById('toggleMdp').onclick = function() {
      if (inputMdp.type === 'password') {
        inputMdp.type = 'text'; eye.classList.replace('fa-eye','fa-eye-slash');
      } else {
        inputMdp.type = 'password'; eye.classList.replace('fa-eye-slash','fa-eye');
      }
    };

    // Force du mot de passe
    inputMdp.oninput = function(e) {
      const val = e.target.value;
      const strength = document.getElementById('mdp-strength');
      let score = 0;
      if (val.length >= 8) score++;
      if (/[A-Z]/.test(val)) score++;
      if (/[0-9]/.test(val)) score++;
      if (/[^A-Za-z0-9]/.test(val)) score++;
      if (!val) strength.textContent = '';
      else if (score <= 1)      strength.textContent = 'Force : faible';
      else if (score == 2)      strength.textContent = 'Force : moyen';
      else if (score >= 3)      strength.textContent = 'Force : fort';
    };

    // Feedback live confirmation mdp
    function checkMdpMatch() {
      if (!inputConfirm.value) {
        inputConfirm.classList.remove("is-invalid", "is-valid");
        return;
      }
      if (inputMdp.value && inputConfirm.value === inputMdp.value) {
        inputConfirm.classList.remove("is-invalid");
        inputConfirm.classList.add("is-valid");
      } else {
        inputConfirm.classList.remove("is-valid");
        inputConfirm.classList.add("is-invalid");
      }
    }
    inputMdp.addEventListener('input', checkMdpMatch);
    inputConfirm.addEventListener('input', checkMdpMatch);

    // Validation client (Bootstrap)
    (function () {
      'use strict';
      var form = document.getElementById('registerForm');
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity() || inputConfirm.value !== inputMdp.value) {
          event.preventDefault();
          event.stopPropagation();
          if (inputConfirm.value !== inputMdp.value) {
            inputConfirm.classList.add("is-invalid");
          }
        }
        form.classList.add('was-validated');
      }, false);
    })();
  </script>
</body>
</html>

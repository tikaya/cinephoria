<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Cr√©er une s√©ance - Cin√©phoria</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Cinzel:wght@600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">

  <style>
    :root {
      --gold: #f5c518;
      --bg1: #0a0f1f;
      --ink: #e4e4e4;
    }

    body {
      background-color: var(--bg1);
      color: var(--ink);
      font-family: 'Poppins', sans-serif;
      overflow-x: hidden;
      opacity: 0;
      transition: opacity 1s ease;
    }
    body.loaded { opacity: 1; }

    h1.text-cinema {
      font-family: 'Cinzel', serif;
      color: var(--gold);
      text-shadow: 0 0 12px rgba(245,197,24,0.6);
      margin-bottom: 30px;
      text-align: center;
    }

    form {
      max-width: 750px;
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(245,197,24,0.2);
      border-radius: 14px;
      padding: 2rem;
      box-shadow: 0 0 20px rgba(0,0,0,0.6);
      backdrop-filter: blur(8px);
    }

    label { color: var(--gold); font-weight: 600; }

    .btn-cinema {
      background-color: var(--gold);
      border: none;
      color: #000;
      font-weight: bold;
      text-transform: uppercase;
      transition: background 0.3s ease, transform 0.2s ease;
      border-radius: 6px;
    }

    .btn-cinema:hover {
      background-color: #ffd84a;
      transform: translateY(-2px);
      box-shadow: 0 0 10px rgba(245,197,24,0.5);
    }

    /* üé® Inputs & selects */
    .form-select, .form-control {
      background-color: rgba(255,255,255,0.08);
      border: 1px solid rgba(245,197,24,0.2);
      color: var(--ink);
    }

    .form-select:focus, .form-control:focus {
      border-color: var(--gold);
      box-shadow: 0 0 8px rgba(245,197,24,0.3);
      background-color: rgba(255,255,255,0.1);
      color: var(--ink);
    }

    select option {
      background-color: #0d1324;
      color: var(--ink);
    }
    select option:hover, select option:checked {
      background-color: var(--gold);
      color: #000;
    }

    .text-muted { color: #bbb !important; font-size: 0.9rem; }
  </style>
</head>

<body>
  <header>
    <%- include('partials/header_employe', { currentUser }) %>
  </header>

  <main class="container py-5">
    <h1 class="text-cinema">üé¨ Cr√©er une nouvelle s√©ance</h1>
    <% if (success && success.length > 0) { %>
  <div class="alert alert-success text-center fw-bold mb-4" role="alert">
    ‚úÖ <%= success[0] %>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="alert alert-danger text-center fw-bold mb-4" role="alert">
    ‚ö†Ô∏è <%= error[0] %>
  </div>
<% } %>


    <!-- üîî Messages d‚Äôerreur ou de succ√®s -->
    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
      <div class="alert alert-danger text-center fw-bold mb-4" role="alert">
        ‚ö†Ô∏è <%= errorMessage %>
      </div>
    <% } %>

    <% if (typeof successMessage !== 'undefined' && successMessage) { %>
      <div class="alert alert-success text-center fw-bold mb-4" role="alert">
        ‚úÖ <%= successMessage %>
      </div>
    <% } %>

    <form method="POST" action="/intranet/seances/create">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <!-- FILM -->
      <div class="mb-3">
        <label for="id_film" class="form-label">üéûÔ∏è Film</label>
        <select id="id_film" name="id_film" class="form-select" required>
          <option value="">-- S√©lectionner un film --</option>
          <% films.forEach(f => { %>
            <option value="<%= f.id_film %>" <%= old && old.id_film == f.id_film ? "selected" : "" %>>
              <%= f.titre %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- SALLE -->
      <div class="mb-3">
        <label for="id_salle" class="form-label">üèõÔ∏è Salle et Cin√©ma</label>
        <select id="id_salle" name="id_salle" class="form-select" required>
          <option value="">-- S√©lectionner une salle --</option>
          <% salles.forEach(s => { %>
            <option value="<%= s.id_salle %>" <%= old && old.id_salle == s.id_salle ? "selected" : "" %>>
              <%= s.nom_salle %> ‚Äî <%= s.nom_cinema %>
            </option>
          <% }) %>
        </select>
        <small class="text-muted">Le nom du cin√©ma s‚Äôaffiche pour √©viter toute confusion.</small>
      </div>

      <!-- QUALIT√â -->
      <div class="mb-3">
        <label for="qualite_projection" class="form-label">üìΩÔ∏è Qualit√© de projection</label>
        <select id="qualite_projection" name="qualite_projection" class="form-select" required>
          <option value="">-- Choisir la qualit√© --</option>
          <% qualites.forEach(q => { %>
            <option value="<%= q %>" <%= old && old.qualite_projection === q ? "selected" : "" %>>
              <%= q %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- DATE & HEURES -->
      <div class="row mb-3">
        <div class="col-md-4">
          <label for="date_seance" class="form-label">üìÖ Date</label>
          <input type="date" id="date_seance" name="date_seance"
                 class="form-control" required
                 value="<%= old?.date_seance || '' %>">
        </div>
        <div class="col-md-4">
          <label for="heure_debut" class="form-label">üïó D√©but</label>
          <input type="time" id="heure_debut" name="heure_debut"
                 class="form-control" required
                 value="<%= old?.heure_debut || '' %>">
        </div>
        <div class="col-md-4">
          <label for="heure_fin" class="form-label">üïô Fin</label>
          <input type="time" id="heure_fin" name="heure_fin"
                 class="form-control" required
                 value="<%= old?.heure_fin || '' %>">
        </div>
      </div>

      <!-- PRIX -->
      <div class="mb-3">
        <label for="prix" class="form-label">üí∞ Prix unitaire (‚Ç¨)</label>
        <input type="number" id="prix" name="prix"
               step="0.01" min="1"
               class="form-control" required
               value="<%= old?.prix || '' %>">
      </div>

      <!-- SUBMIT -->
      <button type="submit" class="btn btn-cinema w-100 mt-3">
        <i class="fa-solid fa-circle-plus me-2"></i>Cr√©er la s√©ance
      </button>
    </form>
  </main>

  <footer>
    <%- include('partials/footer') %>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.addEventListener("load", () => document.body.classList.add("loaded"));
  </script>
</body>
</html>
